#!/bin/bash

# Directory to store Pokémon JSON data
output_dir="pokemon_data"
mkdir -p "$output_dir"

# Error log file
error_log="errors.txt"
> "$error_log"  # clear previous errors

# List of Pokémon to fetch
pokemons=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Max retry attempts
max_retries=3

# Delay between requests to avoid rate limiting
delay=2

for pokemon in "${pokemons[@]}"; do
    echo "Fetching data for $pokemon..."
    attempt=1
    success=false

    while [ $attempt -le $max_retries ]; do
        # Make API request
        response=$(curl -s -w "%{http_code}" -o "$output_dir/$pokemon.json" "https://pokeapi.co/api/v2/pokemon/$pokemon")

        # Extract HTTP status code
        http_code=$(tail -c 3 <<< "$response")

        if [ "$http_code" -eq 200 ]; then
            echo "Saved data to $output_dir/$pokemon.json ✅"
            success=true
            break
        else
            echo "Attempt $attempt failed for $pokemon (HTTP $http_code)"
            ((attempt++))
            sleep $delay
        fi
    done

    if [ "$success" = false ]; then
        echo "Failed to fetch $pokemon after $max_retries attempts ❌" | tee -a "$error_log"
    fi

    sleep $delay
done
